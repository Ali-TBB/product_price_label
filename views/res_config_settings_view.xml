<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form_paperformat" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.paperformat</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath  expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Product Label Settings"
                    string="Product Label Settings">
                    <h2>Product Price Label</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-6">
                            <div class="o_setting_box">
                                <label for="paper_width" />
                                <div class="o_input">
                                    <field name="paper_width" />
                                </div>
                            </div>

                            <div class="o_setting_box">
                                <label for="paper_height" />
                                <div class="o_input">
                                    <field name="paper_height" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
  