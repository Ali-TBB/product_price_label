<odoo>
  <!-- Paper Width -->
  <record id="param_price_label_width" model="ir.config_parameter">
    <field name="key">product_price_label.paper_width</field>
    <field name="value">43</field>
  </record>

  <!-- Paper Height -->
  <record id="param_price_label_height" model="ir.config_parameter">
    <field name="key">product_price_label.paper_height</field>
    <field name="value">35</field>
  </record>

  <report
    id="action_product_price_label"
    model="product.template"
    string="Price Label"
    report_type="qweb-pdf"
    name="product_price_label.product_price_label_template"
    file="product_price_label.product_price_label_template"
    print_report_name="'Price_Labels'"
  />
</odoo> 